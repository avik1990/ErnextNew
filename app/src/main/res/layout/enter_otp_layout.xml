<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llOtp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_25sdp"
    android:layout_marginRight="@dimen/_25sdp"
    android:background="@drawable/drawable_white_grey"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <com.app.ernext.customUiComponents.CustomEditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/etOtp1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionNext"
        android:inputType="numberPassword"
        android:maxLength="1" />

    <com.app.ernext.customUiComponents.CustomEditText
        android:id="@+id/etOtp2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionNext"
        android:inputType="numberPassword"
        android:maxLength="1" />

    <com.app.ernext.customUiComponents.CustomEditText
        android:id="@+id/etOtp3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionNext"
        android:inputType="numberPassword"
        android:maxLength="1" />

    <com.app.ernext.customUiComponents.CustomEditText
        android:id="@+id/etOtp4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="1" />
    <com.app.ernext.customUiComponents.CustomEditText
        android:id="@+id/etOtp5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="1" />

    <com.app.ernext.customUiComponents.CustomEditText
        android:id="@+id/etOtp6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@drawable/drawable_transparent_transparent_roundedcorner"
        android:gravity="center"
        android:hint="@string/dot"
        android:textSize="@dimen/_12sdp"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="1" />


</LinearLayout>