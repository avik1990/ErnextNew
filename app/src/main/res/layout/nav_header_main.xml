<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_product_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/myprofile"
            app:civ_border_width="0.5dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/tv_notif_tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="2.0"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tv_text"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_product_photo"
            android:layout_alignTop="@+id/iv_product_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_product_photo"
            android:gravity="center_vertical"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="2.0"
            android:text="Think Next"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </RelativeLayout>
</RelativeLayout>